//App.js file

import React,{useState} from "react";

const App=()=>{
  const state=useState();

  const [count,setCount]=useState(0);

  const increment=()=>{
    setCount(count+1);
};

const decrement=()=>{
    if(count>0){
    setCount(count-1);
    }
  };

  return(
    <>
    <h1>{count}</h1>
    
    <button onClick={increment}>Click Here</button>
    </>
  );
};

export default App;

----------------------**********************---------------------------------------

//index.js file

import React,{useState} from "react";
import ReactDOM from "react-dom";
import "./index.css";
import App from "./App";


ReactDOM.render(
  <App></App>,
  document.querySelector("#inner")
);

