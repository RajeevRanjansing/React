//New Program

import React from "react";
import ReactDOM from "react-dom";
import Heading from "./Heading";
import App from "./App";

ReactDOM.render(
    <>
    <Heading></Heading>
    <App></App>
    </>,
    document.querySelector("#root")
);


//Heading file

import React from 'react';

function Heading(){
    return <h1>My name is Rajeev Singh</h1>;
}
export default Heading; 

//App file

import React from "react";
function App(){
    return <p>I live in sarigam</p>;
}
export default App;

